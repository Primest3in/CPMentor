<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal"
    android:background="@drawable/card_back_white">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/commenter_dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:padding="4dp"
            android:src="@drawable/me"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/comment_upvote_cnt_text"
            android:layout_gravity="center"
            android:text="+0"
            android:textSize="18sp"
            android:textColor="#1FFF0E"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/name"
            android:text="Mahbubul Hasan"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textSize="10sp"
            android:textColor="@color/dark_grey"
            android:fontFamily="sans-serif-condensed"/>
        <TextView
            android:id="@+id/commenter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="sans-serif-condensed"
            android:text="text"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1001"
            android:id="@+id/linear_id"

            android:layout_margin="5dp"
            android:layout_height="15dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_weight="200"
                android:id="@+id/comment_upvote_img"
                android:src="@drawable/arrow_upward" />
            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_below="@id/commenter_name"
                android:background="@color/dark_grey"/>

            <ImageView
                android:layout_width="15dp"
                android:id="@+id/comment_downvote_img"
                android:layout_height="15dp"
                android:layout_weight="200"
                android:src="@drawable/arrow_downward" />

        </LinearLayout>


    </LinearLayout>



</LinearLayout>